@page "/attendance/{id:int}"
@inject Services.AttendanceService AttendanceService

<h2>Attendance List</h2>
<p>Event ID: @id</p>

@if (attendees.Any())
{
    <ul class="list-group">
        @foreach (var attendee in attendees)
        {
            <li class="list-group-item">@attendee</li>
        }
    </ul>
}
else
{
    <p class="text-warning">No attendees yet.</p>
}

<div class="btn-group mt-3">
    <a class="btn btn-secondary" href="">â¬… Back to Events</a>
    <a class="btn btn-primary" href="/eventdetails/@id">ðŸ”Ž Back to Event Details</a>
</div>

@code {
    [Parameter] public int id { get; set; }
    private List<string> attendees = new();

    protected override void OnInitialized()
    {
        attendees = AttendanceService.GetAttendees(id).ToList();
    }
}
