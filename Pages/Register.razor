@page "/register/{id:int}"
@using EventEaseApp.Models
@inject Services.UserSessionService SessionService
@inject Services.AttendanceService AttendanceService
@inject NavigationManager NavManager

<h2>Register for Event</h2>
<p>You are registering for event ID: @id</p>

<EditForm Model="registration" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label>Name:</label>
        <InputText class="form-control" @bind-Value="registration.Name" />
        <ValidationMessage For="@(() => registration.Name)" />
    </div>

    <div class="mb-3">
        <label>Email:</label>
        <InputText class="form-control" @bind-Value="registration.Email" />
        <ValidationMessage For="@(() => registration.Email)" />
    </div>

    <button class="btn btn-primary">Submit</button>
</EditForm>

@if (submitted)
{
    <p class="text-success">Registration successful! Redirecting back to event details...</p>
}

@code {
    [Parameter] public int id { get; set; }
    private RegistrationModel registration = new();
    private bool submitted = false;

    private async void HandleValidSubmit()
    {
        SessionService.RegisterUser(registration, id);
        AttendanceService.MarkAttendance(id, registration.Name);
        submitted = true;

        // Redirect after 3 seconds
        await Task.Delay(3000);
        NavManager.NavigateTo($"/eventdetails/{id}");
    }
}
